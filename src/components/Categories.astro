<div class="titulo p-4 grid grid-cols-1 md:grid-cols-10 gap-4 mx-0 md:mx-10 lg:mx-24 overflow-x-hidden">

  <!-- TOP COLUMN -->
    <!-- Left -->
  <a 
    href="/carreras" 
    data-astro-reload 
    transition:name="CarrerasImg"
    class="CardMain col-span-1 md:col-start-1 md:col-span-2 LeftAnimation"
  >
    <div class="CardTiteContainer">
      <p class="CardTitle">Carreras</p>
    </div>
    <img class="CardImg" src="/img/categories/CardCarreras.webp" alt="Carreras">
  </a>

    <!-- Center -->
  <a 
    href="/participantes"
    data-astro-reload
    transition:name="ParticipantesImg"
    class="CardMain col-span-1 md:col-start-3 md:col-span-6 CenterAnimation"
  >
    <div class="CardTiteContainer">
      <p class="CardTitle">Participantes</p>
    </div>
    <img class="CardImg Trigger" src="/img/categories/CardParticipantes.webp" alt="Participantes">
  </a>

    <!-- Right -->
  <a 
    href="/teams"
    transition:name="TeamsImg"
    class="CardMain col-span-1 md:col-start-9 md:col-span-2 RightAnimation"
  >
    <div class="CardTiteContainer">
      <p class="CardTitle">Teams</p>
    </div>
    <img class="CardImg" src="/img/categories/CardTeams.webp" alt="Teams">
  </a>
  <!-- BOT COLUMN -->
    <!-- Left -->
  <a 
    href="/retiro"
    transition:name="RetiroImg"
    class="CardMain col-span-1 md:col-start-2 md:col-span-4 LeftAnimation"
  >
    <div class="CardTiteContainer">
      <p class="CardTitle">Retiro</p>
    </div>
    <img class="CardImg" src="/img/categories/CardRetiro.webp" alt="Retiro">
  </a>
  
    <!-- Right -->
  <a 
    href="/puntos"
    transition:name="PuntosImg"    
    class="CardMain col-span-1 md:col-start-6 md:col-span-4 RightAnimation"
  >
    <div class="CardTiteContainer">
      <p class="CardTitle">Puntos</p>
    </div>
    <img class="CardImg" src="/img/categories/CardPoints.webp" alt="Puntos">
  </a>  
</div>

<style>
  .CardMain {
    @apply relative cursor-pointer border-2 border-yellow-300 rounded-lg;
  }

  .CardTiteContainer {
    @apply absolute z-10 text-center text-red-600 hover:bg-white hover:bg-opacity-40 rounded-lg w-full h-full transition ease-in-out duration-300;
  }

  .CardTitle {
    @apply text-xs border-2 border-yellow-300 bg-white bg-opacity-70 inline-block m-2 p-2;
  }

  .CardImg {
    @apply h-full max-w-full object-cover rounded-lg;
  }

  .LeftAnimation {
    transform: translateX(-500px);
    transition: 1s;
    opacity: 0;
  }
  .RightAnimation {
    transform: translateX(500px);
    transition: 1s;
    opacity: 0;
  }
  .CenterAnimation {
    scale: 0;
    opacity: 0;
  }
  .LeftAnimation.show, .RightAnimation.show, .CenterAnimation.show {
    transform: translateX(0);
    scale: 1;
    transition: 2s;
    opacity: 1;
  }
</style>

<script> 
  import ScrollMagic from 'scrollmagic';
   
  var controller = new ScrollMagic.Controller();

  var categoriesAnimation = new ScrollMagic.Scene({
    triggerElement: '.Trigger',
    duration: '170%',
    triggerHook: .9,
  })
  .setClassToggle('.LeftAnimation, .RightAnimation, .CenterAnimation', 'show')
  .addTo(controller);
</script>